<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/select_buddy_premium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/view_margin"
            android:gravity="center_vertical"
            android:text="@string/select_buddy"
            android:visibility="gone"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/buddy_card_view1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="5dp"
            card_view:cardBackgroundColor="@color/cardview_dark_background"
            card_view:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_buddy_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="3dp"
        android:fontFamily="@font/source_sans_pro_semibold"
                    android:padding="3dp"
                    android:text="Buddy Name"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_buddy_neutral" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="5dp">


                        <TextView
                            android:id="@+id/book_buddy_details1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="3dp"
                            android:text="Buddy Name"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/book_buddy_phone1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:drawableEnd="@drawable/ic_phone"
                            android:text="Buddy Name"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/view_schedule_buddy1"
                            style="@style/TransparentPositiveButton"
                            android:textColor="@color/theme_blue"
                            android:layout_height="20dp"
                            android:layout_width="match_parent"
                            android:layout_marginStart="0dp"
                            android:gravity="start"
                            android:layout_gravity="start"
                            android:text="@string/view_schedule"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/remove_buddy1"
                        style="@style/GradientNegativeSmallButton"
                        android:layout_weight="0.5"
                        android:text="@string/remove" />

                    <Button
                        android:id="@+id/book_buddy1"
                        style="@style/GradientSmallButton"
                        android:layout_weight="0.5"
                        android:visibility="visible"
                        android:text="@string/select_label" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/buddy_card_view2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="5dp"
            card_view:cardBackgroundColor="@color/cardview_dark_background"
            card_view:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_buddy_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:padding="3dp"
        android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="Buddy Name"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_buddy_neutral" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="5dp">


                        <TextView
                            android:id="@+id/book_buddy_details2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="3dp"
                            android:fontFamily="serif-monospace"
                            android:text="Buddy Name"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/book_buddy_phone2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:drawableEnd="@drawable/ic_phone"
                            android:text="Buddy Name"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/view_schedule_buddy2"
                            style="@style/TransparentPositiveButton"
                            android:textColor="@color/theme_blue"
                            android:layout_height="20dp"
                            android:layout_width="match_parent"
                            android:layout_marginStart="0dp"
                            android:gravity="start"
                            android:soundEffectsEnabled="true"
                            android:layout_gravity="start"
                            android:text="@string/view_schedule"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/remove_buddy2"
                        style="@style/GradientNegativeSmallButton"
                        android:layout_weight="0.5"
                        android:text="@string/remove" />

                    <Button
                        android:id="@+id/book_buddy2"
                        style="@style/GradientSmallButton"
                        android:layout_weight="0.5"
                        android:text="@string/select_label" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/buddy_card_view3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="5dp"
            card_view:cardBackgroundColor="@color/cardview_dark_background"
            card_view:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_buddy_name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:padding="3dp"
        android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="Buddy Name"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_buddy_neutral" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="5dp">


                        <TextView
                            android:id="@+id/book_buddy_details3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Buddy Name"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/book_buddy_phone3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:drawableEnd="@drawable/ic_phone"
                            android:text="Buddy Name"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/view_schedule_buddy3"
                            style="@style/TransparentPositiveButton"
                            android:textColor="@color/theme_blue"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="start"
                            android:layout_marginStart="0dp"
                            android:text="@string/view_schedule"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/remove_buddy3"
                        style="@style/GradientNegativeSmallButton"
                        android:layout_weight="0.5"
                        android:text="@string/remove" />

                    <Button
                        android:id="@+id/book_buddy3"
                        style="@style/GradientSmallButton"
                        android:layout_weight="0.5"
                        android:text="@string/select_label" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/remove_selected_buddies_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:soundEffectsEnabled="true"
            android:text="@string/remove_selection"
            android:textColor="@color/colorAccent"
            android:textIsSelectable="true"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/buddy_card_view4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="5dp"
            card_view:cardBackgroundColor="@color/cardview_dark_background"
            card_view:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_add_buddy_neutral" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!--</LinearLayout>-->
        <TextView
            android:id="@+id/remove_all_buddies_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:soundEffectsEnabled="true"
            android:text="@string/remove_buddies"
            android:textColor="@color/colorAccent"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>