<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.PeerListFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/broadcast_list_layout_title"
        android:background="@color/theme_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/broadcast_list_title"
        android:padding="3dp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/service_data_list"
        android:layout_below="@+id/broadcast_list_layout_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollingCache="false"
        android:smoothScrollbar="true"
        android:animationCache="false"
        android:dividerHeight="1dp"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_marginTop="8dp">
    </ListView>

    <TextView
        android:id="@+id/no_data_tv_broadcast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
            android:fontFamily="@font/source_sans_pro_extralight"
        android:gravity="center"
        android:text="No data"
        android:textColor="@color/common_google_signin_btn_text_dark_disabled"
        android:textSize="30sp"
        android:visibility="gone" />

</RelativeLayout>