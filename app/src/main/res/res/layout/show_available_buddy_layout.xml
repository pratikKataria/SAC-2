<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/list_buddy_card_view"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="5dp"
            card_view:cardBackgroundColor="@color/theme_background"
            card_view:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_buddy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:padding="3dp"
        android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="Buddy Name"
                    android:textColor="@color/black"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">

                    <com.caringaide.user.utils.RoundedImageView
                        android:id="@+id/list_buddy_gender"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_buddy_neutral" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">

                        <Button
                            android:id="@+id/list_buddy_phone"
                            style="@style/TransparentPositiveButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:drawableEnd="@drawable/ic_phone_green"
                            android:visibility="gone"
        android:fontFamily="@font/source_sans_pro"
                            android:text="Buddy Phone"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/list_buddy_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="3dp"
        android:fontFamily="@font/source_sans_pro"
                            android:gravity="start"
                            android:text="Buddy mail"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/list_buddy_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
        android:fontFamily="@font/source_sans_pro"
                            android:text="Buddy add" />

                        <TextView
                            android:id="@+id/list_buddy_zipcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
                            android:textColor="@color/black"
                            android:gravity="start"
                            android:text="Buddy Name" />
                        <Button
                            android:id="@+id/list_buddy_add_btn"
                            style="@style/GradientSmallButton"
                            android:layout_gravity="center_horizontal"
                            android:padding="3dp"
                            android:gravity="center"
                            android:text="@string/add_label"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

