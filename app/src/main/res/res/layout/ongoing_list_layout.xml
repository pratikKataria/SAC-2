<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white"
    tools:context=".fragments.OngoingListFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_list_layout_title"
        android:background="@color/theme_blue"
        android:textColor="@color/white"
        android:text="@string/ongoing_list_title"
        android:padding="3dp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/ongoing_service_data_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollingCache="false"
        android:smoothScrollbar="true"
        android:animationCache="false"
        android:dividerHeight="1dp"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_below="@+id/confirm_list_layout_title">
    </ListView>
    <TextView
        android:id="@+id/no_data_tv_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No data"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@color/white"
        android:visibility="gone"
        android:textColor="@color/common_google_signin_btn_text_dark_disabled"
        />
    <Button
        android:id="@+id/refresh_list_btn"
        style="@style/GradientThemeSmallButton"
        android:drawableStart="@drawable/ic_refresh_light"
        android:text="@string/refresh"
        android:padding="3dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/ongoing_service_data_list"/>
</RelativeLayout>