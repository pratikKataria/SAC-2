<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    style="@android:style/TextAppearance.StatusBar.EventContent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cabaide_icon_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:foregroundGravity="top"
            android:src="@drawable/care_icon"
            android:contentDescription="notification_icon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/notification_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_purple"
        android:fontFamily="@font/source_sans_pro_semibold"
                android:text="Aide Request"
                android:textAlignment="center"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/notification_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_blue"
        android:fontFamily="@font/source_sans_pro"
                android:text="Aide RequestAide RequestAide RequestAide RequestAide RequestAide RequestAide Request"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>