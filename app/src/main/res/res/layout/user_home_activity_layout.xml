<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/helping_grandpa"
    tools:context=".activities.UserHomeActivity">
    <include
        android:id="@+id/transparent_header"
        android:visibility="gone"
        layout="@layout/custom_header_layout_white"/>
    <ViewFlipper
        android:id="@+id/imageFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoStart="true"
        android:flipInterval="5000"
        android:outAnimation="@anim/view_flipper_left_out">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/title_activity_alt_home"
            android:src="@drawable/coronadad" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/title_activity_alt_home"
            android:src="@drawable/drivedad"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/title_activity_alt_home"
            android:src="@drawable/coronamom"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/title_activity_alt_home"
            android:src="@drawable/helping_grandpa"/>
    </ViewFlipper>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/show_announcements_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/fab_margin"
            style="@style/GradientSmallButton"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            app:fabSize="auto"
            android:contentDescription="@string/annoouncements"
            app:backgroundTint="@color/theme_blue"
            android:backgroundTint="@color/theme_background"
            app:srcCompat="@drawable/shout" />

    <LinearLayout
        android:id="@+id/action_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="@dimen/view_margin">

        <LinearLayout
            android:id="@+id/home_book_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:background="@color/white_transparent">

            <TextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/input_margin"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/book_now_label"
                android:textColor="@color/theme_purple"
                android:textScaleX="1.2" />

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/input_margin"
                android:layout_marginEnd="2dp"
            android:fontFamily="@font/source_sans_pro"
                android:padding="3dp"
                android:text="@string/book_now_subhead"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_my_bookings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white_transparent">

            <TextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/input_margin"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/mybookings_label"
                android:textColor="@color/theme_purple"
                android:textScaleX="1.2" />

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/input_margin"
            android:fontFamily="@font/source_sans_pro"
                android:includeFontPadding="false"
                android:text="@string/mybookings_subhead"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/announcement_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/scrollabe_announcement_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/input_margin"
                android:layout_gravity="center"
                android:padding="5dp"
                android:stretchColumns="1"
                android:gravity="center">
                <!--will be dynmaically updated with table rows-->
            </TableLayout>
        </ScrollView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/pending_pay_frame_layout"
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:layout_height="match_parent">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/register_ben_notify"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="80dp"
        android:background="@color/black_light"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tap_img_regben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/no_client"
                android:src="@drawable/tap"/>
            <TextView
                android:id="@+id/no_client_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_toEndOf="@+id/tap_img_regben"
                android:textColor="@color/white"
                android:padding="@dimen/input_margin"
                style="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp"
                android:text="@string/no_client"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/no_client_info_title"
                android:textColor="@color/white"
                android:padding="@dimen/input_margin"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="15sp"
                android:text="@string/info_no_client"/>
        </RelativeLayout>

    </FrameLayout>
</RelativeLayout>