<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/custom_header_layout_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/otp_hint"
        android:textStyle="bold"
        android:textColor="@color/theme_purple"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginHorizontal="@dimen/view_margin"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-10dp"
        android:layout_marginHorizontal="@dimen/input_margin"
        android:weightSum="1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOtp0"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginHorizontal="@dimen/view_margin"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOtp1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginHorizontal="@dimen/view_margin" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOtp2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginHorizontal="@dimen/view_margin" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOtp3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginHorizontal="@dimen/view_margin" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOtp4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginHorizontal="@dimen/view_margin" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resend_otp"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:layout_marginStart="@dimen/view_margin"
        android:layout_marginEnd="@dimen/view_margin"/>
    <TextView
        android:id="@+id/otp_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginStart="@dimen/view_margin"
        android:layout_marginEnd="@dimen/view_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:weightSum="1"
        android:layout_marginStart="@dimen/view_margin"
        android:layout_marginEnd="@dimen/view_margin">
        <Button
            android:id="@+id/cancel_otp"
            style="@style/MultiButtonRed"
            android:text="@string/cancel"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/send_otp"
            style="@style/MultiButtonBlue"
            android:text="@string/ok"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>