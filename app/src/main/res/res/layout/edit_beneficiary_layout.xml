<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_benif_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/input_margin"
            android:layout_marginEnd="@dimen/input_margin">

            <com.google.android.material.textfield.TextInputEditText android:backgroundTint="@color/theme_blue"
                android:id="@+id/edit_benif_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
                android:hint="@string/full_name_label"
                android:enabled="false"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_benif_dob_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/input_margin"
            android:layout_marginEnd="@dimen/input_margin">

            <com.google.android.material.textfield.TextInputEditText android:backgroundTint="@color/theme_blue"
                android:id="@+id/edit_benif_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
            android:fontFamily="@font/source_sans_pro_extralight"
                android:hint="@string/dob_label"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_benif_mobile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/input_margin"
            android:layout_marginEnd="@dimen/input_margin">

            <com.google.android.material.textfield.TextInputEditText android:backgroundTint="@color/theme_blue"
                android:id="@+id/edit_benif_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
                android:hint="@string/mobile_label"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_benif_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/input_margin"
            android:layout_marginEnd="@dimen/input_margin">

            <com.google.android.material.textfield.TextInputEditText android:backgroundTint="@color/theme_blue"
                android:id="@+id/edit_benif_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
                android:hint="@string/address_label"
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_benif_zipcode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/input_margin"
            android:layout_marginEnd="@dimen/input_margin">

            <com.google.android.material.textfield.TextInputEditText android:backgroundTint="@color/theme_blue"
                android:id="@+id/edit_benif_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
                android:hint="@string/zipcode_label"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/edit_client_area_serviceability"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin">

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
        android:fontFamily="@font/source_sans_pro"
                android:text="@string/select_city"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/edit_benif_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:prompt="@string/select_city" />

        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_benif_state_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/input_margin"
            android:layout_marginEnd="@dimen/input_margin">

            <com.google.android.material.textfield.TextInputEditText android:backgroundTint="@color/theme_blue"
                android:id="@+id/edit_benif_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
            android:fontFamily="@font/source_sans_pro_extralight"
                android:hint="@string/state_label"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_benif_requirements_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/input_margin"
            android:layout_marginEnd="@dimen/input_margin">

            <com.google.android.material.textfield.TextInputEditText android:backgroundTint="@color/theme_blue"
                android:id="@+id/edit_benif_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
                android:hint="@string/additional_info"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_show_card_detail1"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
        android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/manage_cards" />
        <LinearLayout
            android:id="@+id/list_buddy_card_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="155dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/view_margin">

            <TextView
                android:id="@+id/carddetails_text"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
        android:fontFamily="@font/source_sans_pro"
                android:text="@string/payment_details" />

            <!-- include list view for populating card adapter-->
            <include
                android:id="@+id/card_adapter_view"
                layout="@layout/card_list_view_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="1" />

            <Button
                android:id="@+id/add_new_card_btn"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
        android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/add_new_card" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/view_margin"
            android:layout_gravity="center">
            <Button
                android:id="@+id/submit_edit_ben"
                style="@style/GradientSmallButton"
                android:background="@color/theme_blue"
                android:layout_gravity="center"
                android:text="@string/submit"/>
            <Button
                android:id="@+id/cancel_edit_ben"
                style="@style/GradientNegativeSmallButton"
                android:background="@color/colorAccent"
                android:layout_gravity="center"
                android:text="@string/cancel"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>