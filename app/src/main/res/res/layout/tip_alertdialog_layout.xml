<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="500dp"
    android:screenReaderFocusable="true"
    android:background="@color/white">
    <include
        android:id="@+id/custom_header_title"
        layout="@layout/custom_header_layout_white"/>
    <ScrollView
        android:layout_below="@+id/custom_header_title"
        android:id="@+id/tip_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tip_ur_buddy"
        android:gravity="center"
        android:layout_margin="@dimen/input_margin"
        android:textColor="@color/list_title_color"
        android:fontFamily="@font/source_sans_pro_semibold"
        style="@style/TextAppearance.AppCompat.Title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/input_margin"
        android:layout_marginHorizontal="@dimen/view_margin">

        <TextView
            android:id="@+id/ben_booking_id"
            android:layout_width="150dp"
            android:gravity="end"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:fontFamily="@font/source_sans_pro"
            android:textColor="@color/black"
            android:text="@string/booking_id"/>

        <TextView
            style="@style/ListSeparatorStyle"
            android:textColor="@color/black"
            android:layout_weight="0.1"/>
        <Space
            android:layout_width="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tip_booking_id_result"
            style="@style/ListValueTextStyle"
            android:textColor="@color/black"
            android:text=""
            android:layout_weight="0.4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">
        <TextView
            android:id="@+id/buddy_name"
            android:layout_width="150dp"
            android:gravity="end"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:fontFamily="@font/source_sans_pro"
            android:textColor="@color/black"
            android:text="@string/buddy_name_label"/>
        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"
            android:textColor="@color/black"/>
        <Space
            android:layout_width="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tip_buddy_name_result"
            style="@style/ListValueTextStyle"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight="0.4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">
        <TextView
            android:id="@+id/amount_paid"
            android:layout_width="150dp"
            android:gravity="end"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:fontFamily="@font/source_sans_pro"
            android:textColor="@color/black"
            android:text="@string/amount_paid"/>
        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/amount_paid_result"
            style="@style/ListValueTextStyle"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight="0.4"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/choose_tip"/>
