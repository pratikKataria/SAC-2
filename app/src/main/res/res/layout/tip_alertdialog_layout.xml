    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin"
        android:padding="5dp"
        android:gravity="center">

    <TableRow
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="25%"/>
            <Button
                android:id="@+id/_25_pcent_tip_value"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/rounded_border"
                android:textSize="12sp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="20%"/>
            <Button
                android:id="@+id/_20_pcent_tip_value"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/rounded_border"
                android:textSize="12sp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="15%"/>
            <Button
                android:id="@+id/_15_pcent_tip_value"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/rounded_border"
                android:textSize="12sp"
                android:text=""/>
        </LinearLayout>
    </TableRow>
    <TableRow android:layout_marginTop="@dimen/view_margin"></TableRow>
    <TableRow
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="10%"/>
            <Button
                android:id="@+id/_10_pcent_tip_value"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/rounded_border"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/view_margin"
        android:layout_marginEnd="@dimen/view_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="5%"/>
        <Button
            android:id="@+id/_5_pcent_tip_value"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/rounded_border"
            android:textSize="12sp"
            android:text=""/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/view_margin"
        android:layout_marginEnd="@dimen/view_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <Button
            android:id="@+id/other_tip_value"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/rounded_border"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="@string/others"/>
    </LinearLayout>
    </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/show_other_tip_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:minWidth="350dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin"
            android:textColor="@color/theme_purple"
            android:gravity="center"
            android:text="@string/other_tip_info"/>
        <LinearLayout
            android:id="@+id/other_tip_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/tip_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="$"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="@dimen/view_margin">
                <com.google.android.material.textfield.TextInputEditText
                    android:backgroundTint="@color/theme_blue"
                    android:id="@+id/tip_et_amount"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_extralight"
                    android:gravity="center"
                    android:visibility="visible"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:hint="@string/enter_amount"/>
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_cancel_tip"
                    android:layout_gravity="center"
                    style="@style/GradientNegativeSmallButton"
        android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="@string/cancel"/>
                <Button
                    android:id="@+id/btn_pay_tip"
                    style="@style/GradientSmallButton"
        android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="@string/pay_label"/>
            </LinearLayout>
    </LinearLayout>
    </ScrollView>

        </RelativeLayout>