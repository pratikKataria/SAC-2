    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/ben_booking_requirement"
                style="@style/ListLabelTextStyle"
                android:text="@string/requirements_label"
                android:layout_width="wrap_content"/>

            <TextView
                style="@style/ListSeparatorStyle"
                android:gravity="center"
                android:layout_weight="0.1" />
        </LinearLayout>

        <TextView
            android:id="@+id/ben_booking_requirement_result"
            style="@style/ListValueTextStyle"
            android:text=""
            android:layout_width="match_parent"
            android:maxLines="4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/ben_booking_location"
                style="@style/ListLabelTextStyle"
                android:text="@string/location_label"
                android:layout_width="wrap_content"/>

            <TextView
                style="@style/ListSeparatorStyle"
                android:gravity="center"
                android:layout_weight="0.1" />
        </LinearLayout>
        <TextView
            android:id="@+id/ben_booking_location_result"
            android:layout_width="match_parent"
            style="@style/ListValueTextStyle"
            android:text=""
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">

        <TextView
            android:id="@+id/ben_booking_zipcode"
            style="@style/ListLabelTextStyle"
            android:text="@string/zipcode_label"
            android:layout_weight="0.5"/>

        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/ben_booking_zipcode_result"
            style="@style/ListValueTextStyle"
            android:text=""
            android:layout_weight="0.4"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buddy_details_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:background="@color/theme_green"
        android:layout_marginHorizontal="@dimen/view_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginHorizontal="@dimen/view_margin">

            <TextView
                android:id="@+id/ben_booking_buddy_name"
                style="@style/ListLabelTextStyle"
                android:text="@string/buddy_name_label"
                android:layout_weight="0.3"/>

            <TextView
                style="@style/ListSeparatorStyle"
                android:textColor="@color/black"
                android:layout_weight="0.1"/>
            <TextView
                android:id="@+id/ben_booking_buddy_name_result"
                style="@style/ListValueTextStyle"
                android:text=""
                android:layout_weight="0.6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginHorizontal="@dimen/view_margin">

            <TextView
                android:id="@+id/ben_booking_buddy_email"
                style="@style/ListLabelTextStyle"
                android:text="@string/email_label"
                android:layout_weight="0.3"/>

            <TextView
                style="@style/ListSeparatorStyle"
                android:layout_weight="0.1"/>
            <TextView
                android:id="@+id/ben_booking_buddy_email_result"
                style="@style/ListValueTextStyle"
                android:text=""
                android:layout_weight="0.6"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/cancel_request"
        android:layout_gravity="center"
        style="@style/GradientNegativeSmallButton"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="@string/cancel"/>
</LinearLayout>