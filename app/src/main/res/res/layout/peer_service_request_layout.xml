<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/input_margin"
        android:layout_marginEnd="@dimen/input_margin"
        android:weightSum="1">

        <ImageView
            android:id="@+id/ben_gender_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/beneficiary_label"
            android:src="@drawable/user_avatar"
            android:layout_marginEnd="@dimen/input_margin"/>
        <TextView
            android:id="@+id/ben_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/beneficiary_label"
            android:padding="2dp"
            android:layout_weight="0.9"
            android:textStyle="bold"
            android:textColor="@color/list_title_color"/>
        <ImageView
            android:id="@+id/fav_booking"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:contentDescription="@string/pending_label"
            android:gravity="center"
            android:visibility="gone"
            android:src="@drawable/favimg"/>
    </LinearLayout>
   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginHorizontal="@dimen/view_margin">
            <TextView
                android:textColor="@color/black"
                android:layout_width="55dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:text="@string/age_label"/>
            <TextView
                style="@style/ListSeparatorStyle"
                android:layout_weight="0.1"/>
            <TextView
                android:id="@+id/ben_age"
                android:textSize="18sp"
                style="@style/ListValueTextStyle"
                android:layout_weight="0.8"/>
        </LinearLayout>
  <!--  <Button
        android:id="@+id/cancel_request"
        style="@style/TransparentNegativeButton"
        android:layout_weight=".1"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="@string/cancel"/>

    </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/source_sans_pro"
            android:textStyle="bold"
            android:text="@string/about"/>
       <!-- <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"/>-->
        <TextView
            android:id="@+id/ben_about"
            style="@style/ListValueTextStyle"
            android:textSize="18sp"
            android:maxLines="3"
            android:layout_width="match_parent"/>
    </LinearLayout>
    <View
        style="@style/SmallDivider"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">

        <TextView
            android:id="@+id/ben_booking_id"
            style="@style/ListLabelTextStyle"
            android:text="@string/booking_id"
            android:layout_weight="0.5"/>

        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/ben_booking_id_result"
            style="@style/ListValueTextStyle"
            android:text=""
            android:layout_weight="0.4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">

        <TextView
            android:id="@+id/ben_service_date"
            style="@style/ListLabelTextStyle"
            android:text="@string/service_start_date"
            android:layout_weight="0.5"/>

        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/ben_service_date_result"
            style="@style/ListValueTextStyle"
            android:text=""
            android:layout_weight="0.4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">

        <TextView
            android:id="@+id/ben_service_end_date"
            style="@style/ListLabelTextStyle"
            android:text="@string/service_end_date"
            android:layout_weight="0.5"/>

        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/ben_service_end_date_result"
            style="@style/ListValueTextStyle"
            android:text=""
            android:layout_weight="0.4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">

        <TextView
            android:id="@+id/ben_service_duration"
            style="@style/ListLabelTextStyle"
            android:text="@string/expected_service_duration"
            android:layout_weight="0.5"/>
        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/ben_service_duration_result"
            style="@style/ListValueTextStyle"
            android:text=""
            android:layout_weight="0.4"/>
    </LinearLayout>

   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">
        <TextView
            android:id="@+id/ben_booking_skill"
            style="@style/ListLabelTextStyle"
            android:text="@string/required_skill"
            android:layout_weight="0.3"/>
        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/ben_booking_skill_result"
