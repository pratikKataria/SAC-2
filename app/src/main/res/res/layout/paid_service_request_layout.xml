        android:layout_marginHorizontal="@dimen/view_margin">
        <TextView
            android:id="@+id/ben_given_rating"
            style="@style/ListLabelTextStyle"
            android:text="@string/given_rating"
            android:layout_weight="0.3"/>
        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/ben_given_rating_result"
