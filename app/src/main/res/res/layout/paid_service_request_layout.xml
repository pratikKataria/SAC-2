    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">

        <TextView
            android:id="@+id/ben_booking_zipcode"
            style="@style/ListLabelTextStyle"
            android:text="@string/zipcode_label"
            android:layout_weight="0.5"/>
        <TextView
            style="@style/ListSeparatorStyle"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/ben_booking_zipcode_result"
            style="@style/ListValueTextStyle"
            android:text=""
            android:layout_weight="0.4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginHorizontal="@dimen/view_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/ben_booking_location"
                style="@style/ListLabelTextStyle"
                android:text="@string/location_label"
                android:layout_width="wrap_content"/>

            <TextView
                style="@style/ListSeparatorStyle"
                android:gravity="center"
                android:layout_weight="0.1" />
        </LinearLayout>

        <TextView
            android:id="@+id/ben_booking_location_result"
            android:layout_width="match_parent"
            style="@style/ListValueTextStyle"
            android:text=""
            android:layout_marginStart="20dp"
            android:layout_weight="0.6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="visible"
        android:layout_marginHorizontal="@dimen/view_margin">


        <ImageView
            android:id="@+id/rating_star_image"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_height="30dp"
            android:layout_weight="0.6"
            android:contentDescription="@string/rate_buddy_title"
            android:src="@drawable/star1"/>
        <Button
            android:id="@+id/rate_beneficiary_btn"
            style="@style/TransparentPositiveButton"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="@string/rate_buddy_title"
            android:layout_weight="0.4"
        android:fontFamily="@font/source_sans_pro_semibold"
            android:textColor="@color/theme_blue"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:background="@color/theme_green"
        android:layout_marginHorizontal="@dimen/view_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginHorizontal="@dimen/view_margin">
            <TextView
                android:id="@+id/ben_booking_buddy_name"
                style="@style/ListLabelTextStyle"
                android:text="@string/buddy_name_label"
                android:layout_weight="0.3"/>
            <TextView
                style="@style/ListSeparatorStyle"
                android:textColor="@color/black"
                android:layout_weight="0.1"/>
            <TextView
                android:id="@+id/ben_booking_buddy_name_result"
                style="@style/ListValueTextStyle"
                android:text=""
                android:layout_weight="0.6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/view_margin">

            <TextView
                android:id="@+id/ben_booking_buddy_email"
                style="@style/ListLabelTextStyle"
                android:text="@string/email_label"
                android:layout_weight="0.3"/>

            <TextView
                style="@style/ListSeparatorStyle"
                android:layout_weight="0.1"/>
            <TextView
                android:id="@+id/ben_booking_buddy_email_result"
                style="@style/ListValueTextStyle"
                android:text=""
                android:layout_weight="0.6"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/paid_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>